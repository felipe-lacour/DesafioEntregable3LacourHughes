<main class="max-w-4xl mx-auto my-12">
  <section class="mb-6">
    <h2 class="text-xl font-bold">Lista de Productos</h2>
    <div class="grid grid-cols-3 gap-4" id="mainId">
      {{#each products}}
        <div class="flex flex-col text-left p-2 m-2 justify-between border-2 border-slate-300 rounded-lg">
          <h2 class="text-lg font-bold text-center">{{this.title}}</h2>
          <p>{{this.description}}</p>
          <h3 class="font-bold text-md">${{this.price}}</h3>
          <div class="flex justify-between">
            <h4>Stock:{{this.stock}}</h4>
            <h5 class="font-bold text-red-800">Id:{{this.id}}</h5>
          </div>
        </div>
      {{/each}}
    </div>
  </section>
  <section>
    <h2 class="text-xl font-bold">Modificar Lista</h2>
    <div class="flex items-center">
      <form id="productForm" class="flex flex-col w-72 border-2 border-slate-400 rounded-lg mx-auto p-4 my-6">
        <h2>Agregar Producto</h2>
        <input type="text" name="title" placeholder="title" id="title" class="border border-slate-300 rounded-md my-2 p-2" required/>
        <input type="text" name="description" placeholder="description" id="description"class="border border-slate-300 rounded-md my-2 p-2" required/>
        <input type="text" name="code" placeholder="code" id="code"class="border border-slate-300 rounded-md my-2 p-2" required/>
        <input type="number" name="price" placeholder="price" id="price"class="border border-slate-300 rounded-md my-2 p-2" required/>
        <input type="number" name="stock" placeholder="stock" id="stock"class="border border-slate-300 rounded-md my-2 p-2" required/>
        <input type="text" name="category" placeholder="category" id="category"class="border border-slate-300 rounded-md my-2 p-2" required/>
        <button type="submit" class="bg-green-600 p-2 rounded-md text-white font-bold text-md w-fit mx-auto mt-2 hover:bg-green-500">Submit</button>
      </form>
      <form id="productDeleteForm" class="flex flex-col w-72 border-2 border-slate-400 rounded-lg mx-auto p-4 my-6">
        <h2>Eliminar Producto</h2>
        <input type="number" name="id" placeholder="ID" class="border border-slate-300 rounded-md my-2 p-2" required/>
        <button type="submit" class="bg-red-600 p-2 rounded-md text-white font-bold text-md w-fit mx-auto mt-2 hover:bg-red-500">Submit</button>
      </form>
    </div>
  </section>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>